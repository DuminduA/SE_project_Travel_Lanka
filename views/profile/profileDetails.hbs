<div class="row" id="details">
    <div class="col-md-4 col-md-offset-4">
        <h1 id="h1">PROFILE Details</h1>


        <form action="/profile/profileDetails" method="post" id="form_profile_details">
            <div class="form-group">
                <labal for="" id="labal" name="user_type">User type</labal>
                <select  id="user_type" name="user_type">
                    <option value="Tourist">Tourist</option>
                    <option value="Hotel">Hotel</option>
                    <option value="Restaurant">Restaurant</option>
                    <option value="Guide">Guide</option>
                    <option value="FunPlace">Fun Place</option>
                    <option value="HistoricalPlace">Historical Place</option>
                    <option value="Beach">Beach</option>
                    <option value="ReligiousPlace">Religious Place</option>
                    <option value="CarRental">Car Rental</option>

                </select>
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="country">Country</labal>
                <input type="text" id="" name="country" class="form-control">
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="age">Age / Duration(If You are a business)</labal>
                <input type="text" id="" name="age" class="form-control">
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="tele">Telephone Number</labal>
                <input type="text" id="" name="tele" class="form-control">
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="nationality">Nationality (Sinhala, Tamil, etc.)</labal>
                <input type="text" id="" name="nationality" class="form-control">
            </div>

            <div class="form-group">
                <labal for="" id="labal" name="gender">Gender</labal>
                <select  id="user_type" name="gender">
                    <option value="male">Male</option>
                    <option value="female">Female</option>

                </select>
            </div>

            <div class="form-group">
                <labal for="" id="labal" name="AddressLine1">AddressLine1</labal>
                <input type="text" id="" name="AddressLine1" class="form-control">
            </div>
            <div class="form-group">
                <labal for="AddressLine2" id="labal" name="AddressLine2">AddressLine2</labal>
                <input type="text" id="" name="AddressLine2" class="form-control">
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="AddressLine3">AddressLine3</labal>
                <input type="text" id="" name="AddressLine3" class="form-control">
            </div>
            <div class="form-group">
                <labal for="" id="labal" name="AddressLine4">AddressLine4</labal>
                <input type="text" id="" name="AddressLine4" class="form-control">
            </div>
            <button class="submit btn-primary btn-lg"> submit </button>
            <input type="hidden" value="{{csrfToken}}" name="_csrf">

        </form>


    </div>
</div>